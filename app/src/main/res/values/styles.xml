<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="voidCells2048">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/rounded_border_cell2048</item>
        <item name="android:width">@dimen/size_2048</item>
        <item name="android:height">@dimen/size_2048</item>
    </style>

    <style name="pieceCells2048">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/cell2</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size_2048</item>
        <item name="android:width">@dimen/size_2048</item>
        <item name="android:height">@dimen/size_2048</item>
    </style>

    <style name="voidPieceStyle">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/void_senku_piece</item>
    </style>

    <style name="invisiblePiece">
        <item name="android:visibility">invisible</item>
    </style>

    <style name="pieceStyle">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/piece_senku</item>
    </style>

    <style name="Circular">
        <item name="cornerSize">50%</item>
    </style>
</resources>